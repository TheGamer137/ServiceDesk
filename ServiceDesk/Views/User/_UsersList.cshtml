@model List<UserViewModel>

<thead>
<tr class="text-center">
    <th>Email</th>
    <th>Имя пользователя</th>
    <th>Роль</th>
    <th>Опции</th>
</tr>
</thead>
@foreach (var user in Model)
{
    <tr class="text-center">
        <td>@user.Email</td>
        <td>@user.UserName</td>
        @foreach (var role in user.UserRoles)
        {
            //TODO: Доделать кнопку смены роли
            <td class="flex">
                <input type="radio" asp-for="@user.SelectedRole" value="@role.Id"><label>@role.RoleName</label>
            </td>
        }
        <td>
            <a asp-action="ChangeUserRole" asp-controller="User" class="btn btn-outline-dark form-control">Изменить роль</a>
        </td>
        <td>
            <a asp-action="Delete" asp-controller="User" class="btn btn-outline-dark form-control">Удалить</a>
        </td>
    </tr>
}
