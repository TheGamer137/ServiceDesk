@model List<UserViewModel>

<table class="table table-striped table-hover table-bordered">
<thead>
<tr class="text-center">
    <th>Email</th>
    <th>Имя пользователя</th>
    <th>Роль</th>
    <th>Опции</th>
</tr>
</thead>
@foreach (var user in Model)
{
    <tr class="text-center">
        <td>@user.Email</td>
        <td>@user.UserName</td>
        @foreach (var role in user.UserRoles)
        {
            //TODO: Доделать кнопку смены роли
            @* <td class="flex"> *@
            @*     <input type="radio" asp-for="@user.SelectedRole" value="@role.Id"><label>@role.RoleName</label> *@
            @* </td> *@
            <div class="wrapper">
                <input type="radio" name="select" id="option-1" checked>
                <label for="option-1" class="option option-1">
                    <div class="dot"></div>
                    <span>@role.RoleName</span>
                </label>
            </div>
        }
        <td>
            @* <a asp-action="Delete" asp-controller="User" class="btn btn-outline-dark form-control">Удалить</a> *@
            <a asp-action="Delete" asp-controller="User" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
        </td>
    </tr>
}
</table>
